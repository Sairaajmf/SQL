CREATE TABLE store (ID INTEGER primary key, Item text, price INTEGER, Amount INTEGER);

INSERT INTO store VALUES
(1,'shirts', 6,8),
(2,'pants',10,3),
(3,'socks',2,4),
(4,'shoes',12,2),
(5,'bra',3,4)
;


--display the database ordered by price. 
SELECT * FROM Store
ORDER BY price;


--what are the most 5 popular items? I would have to add "popularity" to my table and this is how I would pull that data. 
SELECT item, price, popularity
FROM store
order by popularity desc
limit 5; 
